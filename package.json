{
    "name": "vscode-imba",
    "displayName": "vscode-imba",
    "description": "Language support for Imba",
    "version": "2.0.0",
    "publisher": "scrimba",
    "main": "./client/index.js",
    "icon": "assets/imba.png",
    "license": "MIT",
    "author": "Sindre Aarsaether",
    "repository": {
        "type": "git",
        "url": "git://github.com/somebee/vscode-imba.git"
    },
    "engines": {
        "vscode": "^1.42.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:imba"
    ],
    "contributes": {
        "semanticTokenTypes": [
            {
                "id": "testToken",
                "description": "A test token"
            }
        ],
        "semanticTokenModifiers": [
            {
                "id": "testModifier",
                "description": "A test modifier"
            }
        ],
        "semanticTokenStyleDefaults": [
            {
                "selector": "testToken",
                "scope": [
                    "entity.name.function.special"
                ]
            },
            {
                "selector": "*.testModifier",
                "light": {
                    "fontStyle": "bold"
                },
                "dark": {
                    "fontStyle": "bold"
                },
                "highContrast": {
                    "fontStyle": "bold"
                }
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Imba Configuration",
            "properties": {
                "imba.maxNumberOfProblems": {
                    "type": "number",
                    "default": 100,
                    "description": "Controls the maximum number of problems produced by the server."
                },
                "imba.suggest.completeFunctionCalls": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.suggest.completeFunctionCalls%",
                    "scope": "resource"
                }
            }
        },
        "languages": [
            {
                "id": "imba",
                "aliases": [
                    "Imba",
                    "imba"
                ],
                "extensions": [
                    ".imba"
                ],
                "configuration": "./language-configuration.json",
                "firstLine": "^#!/.*\\bimba[0-9.-]*\\b"
            }
        ],
        "grammars": [
            {
                "language": "imba",
                "scopeName": "source.imba",
                "path": "./syntaxes/imba.tmLanguage.json"
            }
        ],
        "themes": [
            {
                "label": "Imba Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/ImbaDark.json"
            }
        ]
    },
    "dependencies": {
        "imba": "^2.0.0-alpha.33",
        "vscode-languageclient": "^6.1.1",
        "vscode-languageserver": "^6.1.1"
    },
    "devDependencies": {
        "@rollup/plugin-json": "^4.0.2",
        "rollup": "^1.28.0",
        "rollup-plugin-commonjs": "^10.1.0",
        "rollup-plugin-node-resolve": "^5.2.0"
    },
    "scripts": {
        "dev:bootstrap": "lerna bootstrap",
        "dev:watch": "rollup -c --watch",
        "prod:version": "lerna version"
    }
}
