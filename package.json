{
	"name": "vsimba",
	"displayName": "Imba",
	"description": "Language support for Imba 2",
	"version": "2.0.0",
	"publisher": "scrimba",
	"main": "./client/index.js",
	"icon": "assets/imba.png",
	"license": "MIT",
	"author": "Sindre Aarsaether",
	"repository": {
		"type": "git",
		"url": "git://github.com/imba/vscode-imba.git"
	},
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:imba"
	],
	"contributes": {
		"semanticTokenTypes": [
			{
				"id": "testToken",
				"description": "A test token"
			}
		],
		"semanticTokenModifiers": [
			{
				"id": "testModifier",
				"description": "A test modifier"
			}
		],
		"semanticTokenStyleDefaults": [
			{
				"selector": "testToken",
				"scope": [
					"entity.name.function.special"
				]
			},
			{
				"selector": "*.testModifier",
				"light": {
					"fontStyle": "bold"
				},
				"dark": {
					"fontStyle": "bold"
				},
				"highContrast": {
					"fontStyle": "bold"
				}
			}
		],
		"configuration": {
			"type": "object",
			"title": "Imba",
			"properties": {
				"imba.maxNumberOfProblems": {
					"type": "number",
					"default": 100,
					"description": "Controls the maximum number of problems produced by the server."
				},
				"imba.suggest.completeFunctionCalls": {
					"type": "boolean",
					"default": false,
					"description": "%configuration.suggest.completeFunctionCalls%",
					"scope": "resource"
				}
			}
		},
		"configurationDefaults": {
			"[imba]": {
				"editor.insertSpaces": false,
				"editor.tabSize": 4,
				"editor.autoIndent": "advanced"
			}
		},
		"languages": [
			{
				"id": "imba",
				"aliases": [
					"Imba",
					"imba"
				],
				"extensions": [
					".imba",
					".imba1"
				],
				"configuration": "./language-configuration.json",
				"firstLine": "^#!/.*\\bimba[0-9.-]*\\b"
			}
		],
		"grammars": [
			{
				"language": "imba",
				"scopeName": "source.imba",
				"path": "./syntaxes/imba.tmLanguage",
				"embeddedLanguages": {
					"meta.embedded.block.css": "css"
				}
			}
		],
		"themes": [
			{
				"label": "Imba Dark",
				"uiTheme": "vs-dark",
				"path": "./themes/ImbaDark.json"
			}
		]
	},
	"dependencies": {
		"imba": "^2.0.0-alpha.35",
		"vscode-languageclient": "^6.1.1",
		"vscode-languageserver": "^6.1.1"
	},
	"devDependencies": {
		"@rollup/plugin-json": "^4.0.2",
		"rollup": "^1.28.0",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-resolve": "^5.2.0"
	},
	"scripts": {
		"dev:bootstrap": "lerna bootstrap",
		"dev:watch": "rollup -c --watch",
		"prod:version": "lerna version"
	},
	"__metadata": {
		"id": "c0926dfb-bf29-4689-849e-63ca645e2c1c",
		"publisherDisplayName": "Scrimba",
		"publisherId": "d9260c1d-7c6a-483e-ae32-9e6d2314dff0"
	}
}
